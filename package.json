{
  "name": "motorscope",
  "version": "1.0.0",
  "type": "module",
  "description": "MotorScope - Car Listing Tracker monorepo containing Chrome extension and backend API",
  "private": true,
  "workspaces": [
    "extension",
    "api"
  ],
  "scripts": {
    "build": "npm run build:api && npm run build:extension",
    "build:extension": "cd extension && npm run build",
    "build:api": "cd api && npm run build",
    "lint": "npm run lint:api && npm run lint:extension",
    "lint:extension": "cd extension && npm run lint",
    "lint:api": "cd api && npm run lint",
    "lint:fix": "npm run lint:fix:api && npm run lint:fix:extension",
    "lint:fix:extension": "cd extension && npm run lint:fix",
    "lint:fix:api": "cd api && npm run lint:fix",
    "typecheck": "npm run typecheck:api && npm run typecheck:extension",
    "typecheck:extension": "cd extension && npm run typecheck",
    "typecheck:api": "cd api && npm run typecheck",
    "test": "npm run test:api && npm run test:extension",
    "test:extension": "cd extension && npm test",
    "test:api": "cd api && npm test",
    "dev:extension": "cd extension && npm run dev",
    "dev:api": "cd api && npm run dev",
    "start:api": "cd api && npm start",
    "clean": "rm -rf extension/dist api/dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.53.3",
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.18",
    "lightningcss-linux-x64-gnu": "^1.30.2"
  }
}
