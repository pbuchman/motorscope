# =============================================================================
# Production Environment Configuration Example
# =============================================================================
# Copy this file to terraform.tfvars and update with your values.
# DO NOT commit terraform.tfvars to version control.
#
# REQUIRED VARIABLES (no defaults - must be set):
# - project_id
# - storage_bucket_name
# - environment

# GCP Project ID (REQUIRED)
project_id = "motorscope-prod"

# Environment name (REQUIRED)
environment = "prod"

# Cloud Storage bucket name (REQUIRED - must be globally unique)
storage_bucket_name = "motorscope-prod-images"

# Cloud Run Configuration
cloud_run_min_instances = 1  # Always keep 1 instance running in production
cloud_run_max_instances = 10 # Allow scaling up to 10 instances


# GitHub Configuration
github_owner         = "pbuchman"
github_repo          = "motorscope"
build_trigger_branch = "main" # Production deploys from main branch

