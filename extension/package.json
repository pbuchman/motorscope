{
  "name": "motorscope-extension",
  "version": "1.2.0",
  "description": "Chrome extension to track car listings, monitor price changes, and extract vehicle data from online marketplaces",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run lint && npm run typecheck && VITE_ENV=dev vite build",
    "build:dev": "npm run lint && npm run typecheck && VITE_ENV=dev vite build",
    "build:prod": "npm run lint && npm run typecheck && VITE_ENV=prod vite build",
    "rebuild": "rm -rf dist && npm run build",
    "rebuild:dev": "rm -rf dist && npm run build:dev",
    "rebuild:prod": "rm -rf dist && npm run build:prod",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@google/genai": "^1.33.0",
    "i18next": "^25.7.2",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.0",
    "recharts": "^3.5.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.32",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  }
}
