{
  "manifest_version": 3,
  "name": "MotorScope - Car Listing Tracker",
  "key": "{{MANIFEST_KEY}}",
  "version": "1.4.0",
  "description": "Track car listings, monitor price changes, and extract vehicle data from online marketplaces",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "alarms",
    "notifications",
    "identity"
  ],
  "host_permissions": [
    "https://otomoto.pl/*",
    "https://www.otomoto.pl/*",
    "https://autoplac.pl/*",
    "https://www.autoplac.pl/*",
    "https://*.facebook.com/*"
  ],
  "oauth2": {
    "client_id": "{{OAUTH_CLIENT_ID}}",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "index.html?view=popup",
    "default_title": "MotorScope",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "options_page": "index.html?view=settings",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.otomoto.pl/*",
        "https://otomoto.pl/*"
      ],
      "js": [
        "content-scripts/otomoto.js"
      ],
      "run_at": "document_idle",
      "world": "MAIN"
    },
    {
      "matches": [
        "https://www.otomoto.pl/osobowe/*",
        "https://www.otomoto.pl/dostawcze/*",
        "https://www.otomoto.pl/motocykle-i-quady/*",
        "https://otomoto.pl/osobowe/*",
        "https://otomoto.pl/dostawcze/*",
        "https://otomoto.pl/motocykle-i-quady/*"
      ],
      "js": [
        "content-scripts/otomoto-listing.js"
      ],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon.png"
      ],
      "matches": [
        "https://www.otomoto.pl/*",
        "https://otomoto.pl/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
