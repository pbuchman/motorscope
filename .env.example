# MotorScope Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# GCP Configuration
# =============================================================================

# GCP Project ID
PROJECT_ID=motorscope

# =============================================================================
# API Backend Configuration
# =============================================================================

# Cloud Run service URL (set after deployment)
CLOUD_RUN_SERVICE_URL=https://motorscope-api-xxxxx.europe-west1.run.app

# Cloud Run region
CLOUD_RUN_REGION=europe-west1

# =============================================================================
# Firestore Configuration
# =============================================================================

# Firestore database ID (use "motorscopedb" for named database or "(default)")
FIRESTORE_DB=motorscopedb

# Firestore region
FIRESTORE_REGION=europe-west1

# =============================================================================
# Authentication
# =============================================================================

# Google OAuth Client ID (from GCP Console)
OAUTH_CLIENT_ID=your-oauth-client-id.apps.googleusercontent.com

# JWT Secret for API authentication (generate with: openssl rand -base64 32)
# Only needed for API - set in Cloud Run environment
# JWT_SECRET=your-jwt-secret

# =============================================================================
# Extension Configuration (for local development)
# =============================================================================

# Gemini API Key for AI features
GEMINI_API_KEY=your-gemini-api-key

